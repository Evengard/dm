FROM mcr.microsoft.com/dotnet/core/sdk:2.2 AS build
WORKDIR /app

# copy csproj and restore as distinct layers
COPY . ./
RUN dotnet restore Web/DM.Web.Classic
RUN dotnet publish Web/DM.Web.Classic -c Release -o out

FROM mcr.microsoft.com/dotnet/core/aspnet:2.2 AS runtime
WORKDIR /app
COPY --from=build /app/Web/DM.Web.Classic/out ./
RUN adduser --disabled-password dmuser
USER dmuser
CMD dotnet DM.Web.Classic.dll