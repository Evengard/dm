theme(attr, colorSet)
  {attr}: colorSet.light
  #app .theme-dark ^[0..-1]
    {attr}: colorSet.dark

themeExtend(attr, value, set)
  theme(attr, colorSet(value set.light, value set.dark))

colorSet(light, dark)
  return {light: light, dark: dark}

colorPair(light, dark)
  return {light: light, dark: dark}

/* COLOR THEMES                      Light    Dark  */
// Texts
$text =                     colorSet(#333,    #eaeaea)
$textReversed =             colorSet(#eaeaea, #333)

// Links
$activeText =               colorSet(#3f78a8, #bac7a9)
