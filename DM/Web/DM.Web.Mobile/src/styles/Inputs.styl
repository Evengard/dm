input[type='text'],
input[type='password'],
textarea
  position relative
  margin 0
  border 1px solid
  outline none
  theme(border-color, $border)
  theme(color, $text)
  border-radius $borderRadius
  padding 3px $minor
  font-size $fontSize
  background transparent
  &:focus
    themeExtend(box-shadow, inset 0 0 $minor, $border)
  &:-internal-autofill-selected
    theme(color, $text)
    background transparent

input[type='button'],
button
  button()
  outline none
  border none
  &[disabled]
    theme(background-color, $buttonDisabledBackground)
    theme(color, $buttonDisabledText)
    cursor not-allowed

label
  theme(color, $text)
