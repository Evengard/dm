@using DM.Web.Classic.Extensions.IconFontExtensions
@using Microsoft.AspNetCore.Routing
@model DM.Web.Classic.Views.Home.HomeViewModel
@{
    ViewBag.Title = "Форумные ролевые игры на Dungeonmaster";
    Layout = "~/Views/Shared/Layout/_TwoColumnLayout.cshtml";
}

@section LeftColumn
{
    @await Html.PartialAsync("Layout/LeftBar/GeneralLeftColumn")
}
<div class="home-wrapper">
    @if (Model.News.Any())
    {
        <h2 class="content-mediumTitle home-title">Новости проекта</h2>
        foreach (var article in Model.News)
        {
            @await Html.PartialAsync("News/News", article)
        }
        <a class="modulesList-allLink" href="@Url.Action("Index", "Forum", new RouteValueDictionary {{"forumTitle", "Новости проекта"}})">
            К остальным новостям @IconFont.Render(IconType.DoubleRightAngle)
        </a>
    }
    @if (Model.RandomReview != null)
    {
        @await Html.PartialAsync("Reviews/Review", Model.RandomReview)
    }
</div>

@section FooterScript
{
    <script>
        DM.Ready();
    </script>
}