@model DM.Web.Classic.Views.Shared.GamesList.GameListsViewModel
@if (Model.ForGuest)
{
    @await Html.PartialAsync("GamesList/GamesList", Model.ActiveGames, new ViewDataDictionary(ViewData) {{"BlockTitle", "Активные игры"}, {"AllModulesLink", "Все активные игры"}})
}
else
{
    @await Html.PartialAsync("GamesList/PlayerGamesList", Model.MyGames)
}

@if (!Model.OnlyActive)
{
    @await Html.PartialAsync("GamesList/GamesList", Model.RequiringGames, new ViewDataDictionary(ViewData) {{"BlockTitle", "Набор игроков"}, {"AllModulesLink", "Все игры с открытым набором"}})
    @await Html.PartialAsync("GamesList/GamesList", Model.FinishedGames, new ViewDataDictionary(ViewData) {{"BlockTitle", "Завершенные игры"}, {"AllModulesLink", "Все завершенные игры"}})
}