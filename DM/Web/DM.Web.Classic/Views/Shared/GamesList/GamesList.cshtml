@using DM.Web.Classic.Extensions.IconFontExtensions
@using Microsoft.AspNetCore.Routing
@model DM.Web.Classic.Views.Shared.GamesList.GameListViewModel
<h2 class="content-mediumTitle toggle-list-link" data-status="@Model.Status">@ViewBag.BlockTitle</h2>
<ul class="leftMenu-list">
    @foreach (var module in Model.GameLinks)
    {
        @await Html.PartialAsync("GamesList/GameLink/GameLink", module)
    }
    <li class="leftMenu-list-item">
        <a class="modulesList-allLink" href="@Url.Action("Index", "GamesList", new RouteValueDictionary {{"status", Model.Status}})">
            @ViewBag.AllModulesLink @IconFont.Render(IconType.DoubleRightAngle)
        </a>
    </li>
</ul>