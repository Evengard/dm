@using DM.Web.Classic.Extensions.IconFontExtensions
@using Microsoft.AspNetCore.Routing
@model DM.Web.Classic.Views.Shared.ForaList.ForaListViewModel

<h2 class="content-mediumTitle toggle-list-link" data-status="Fora">Форумы</h2>
<ul class="leftMenu-list">
@foreach (var forum in Model.Fora)
{
    <li class="leftMenu-list-item">
        <div style="white-space: nowrap;">
            <a href="@Url.Action("Index", "Forum", new RouteValueDictionary {{"forumTitle", forum.Title}, {"entityNumber", 1}})" class="@(forum.IsCurrent ? "current-forum" : string.Empty)">
                @forum.Title&nbsp;@Html.UnreadCommentsIcon(forum.UnreadTopicsCount, true)
            </a>
        </div>
    </li>
}
</ul>